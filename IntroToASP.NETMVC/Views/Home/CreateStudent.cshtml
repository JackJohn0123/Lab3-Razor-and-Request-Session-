
@{
    Layout = "_Layout";
    ViewData["Title"] = "Strongly Typed To create a Student object";
}

<h3>Enter the student information</h3>
<form asp-controller="Home" asp-action="DisplayStudent" method="post">
    <table>
        <tr>
            <td>Email Address</td>
            <td><input type="email" name="EmailAddress" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="pass" /></td>
        </tr>
        <tr>
            <td>Student Number</td>
            <td><input type="number" name="studentNumber" required /></td>
        </tr>
        <tr>
            <td>First Name</td>
            <td><input type ="text" name="FirstName" required /></td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td><input type="text" name="LastName" required /></td>
        </tr>
        <tr>
            <td>Description</td>
            <td><input type="text" name="Description" required /></td>
        </tr>

    </table>
    <input type="submit" value="Login" />
</form>